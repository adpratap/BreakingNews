<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Article Image (if available) -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeWidth="1dp"
        app:cardCornerRadius="22dp"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/articleImageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Article Title -->
    <TextView
        android:id="@+id/articleTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Article Title" />

    <View
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="1dp"
        android:background="@color/material_dynamic_tertiary80"/>


    <!-- Article Description -->
    <TextView
        android:id="@+id/articleDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:textSize="18sp"
        android:text="Article Description" />


    <!-- Article Content -->
    <TextView
        android:id="@+id/articleContentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:textSize="18sp"
        android:text="Article Content" />

    <!-- Article Author -->
    <TextView
        android:id="@+id/articleAuthorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:textSize="12sp"
        android:text="Author: John Doe" />

    <!-- Article Published Date -->
    <TextView
        android:id="@+id/articleDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:textSize="12sp"
        android:text="Published on: June 1, 2023" />

    <!-- Article Published Date -->
    <TextView
        android:id="@+id/articleSourceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:textSize="12sp"
        android:text="Source: June 1, 2023" />

</LinearLayout>
